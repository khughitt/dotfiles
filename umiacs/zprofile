export LAB=/cbcb/lab/nelsayed

# RHEL 5/7
export RHEL_RELEASE=$(lsb_release -c | awk '{print $2}')
if [[ "${RHEL_RELEASE}" == "Maipo" ]]; then
    export CBCB="/cbcb/sw/RedHat-7-x86_64/common"
elif [[ "${RHEL_RELEASE}" == "Tikanga" ]]; then
    export CBCB="/cbcb/sw/RedHat-5-x86_64/common"
else
    echo "I do not have a bash configuration for this release, doing nothing."
fi

# Exports
export LAB="/cbcb/lab/nelsayed"
export PATH="$HOME/perl5/bin:$PATH"
export LIBRARY_PATH="$LIBRARY_PATH:/usr/lib64"
export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:/usr/lib64"
export MODULEPATH="$MODULEPATH:$CBCB/modules/dev"

# Load modules
module add zsh \
    tmux       \
    vim        \
    the_silver_searcher
    #perl/ext   \
    #python/ext \
    #R/ext      \
    #tophat     \
    #htop       \
