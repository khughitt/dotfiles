[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"
[init]
	defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[credential]
	helper = cache
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
[merge]
    conflictstyle = diff3
