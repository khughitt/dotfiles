[color]
	ui = true
[core]
	excludesfile = ~/.gitignore_global
	filemode = false
  ;disabling delta as default pager to avoid blocking
  ;pager = delta
[push]
	default = simple
[github]
	user = khughitt
[diff]
  colorMoved = default
  tool = meld
[difftool]
