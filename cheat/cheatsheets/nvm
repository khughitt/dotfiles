# install nvm (zinit)
zinit light lukechilds/zsh-nvm

# list installed
nvm ls

# list available
nvm ls-remote

# install node
nvm install node
nvm install <version>

# choose version to use
nvm use <version>

# show info for current version
nvm ls
nvm current

# upgrade nvm
nvm upgrade

# install & use latest version of node
nvm install node
