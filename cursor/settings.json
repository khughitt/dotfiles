{
    "diffEditor.hideUnchangedRegions.enabled": true,
    "editor.fontFamily": "'JetBrains Mono Regular Nerd Font Complete Mono', 'Droid Sans Mono', 'monospace', monospace",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/.cursor": true,
        "**/.vscode": true,
        "**/*.egg-info": true,
        "**/*.pyc": true,
        "**/*.ruff_cache": true
    },
    "keyboard.dispatch": "keyCode",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none"
    },
    "python.analysis.typeCheckingMode": "basic",
    "r.rmarkdown.enableCodeLens": false,
    "window.commandCenter": true,
    "workbench.colorTheme": "Tokyo Night Light",
    "workbench.colorCustomizations": {
      "focusBorder": "#ff00ff"
    },
    "workbench.preferredDarkColorTheme": "Dracula Theme Soft",
    // remove "w" so that c-w can be used to close tabs
    "vscode-neovim.ctrlKeysForInsertMode": ["a", "d", "h", "j", "m", "o", "r", "t", "u"],
    "vscode-neovim.ctrlKeysForNormalMode": [
        "a",
        "b",
        "d",
        "e",
        "f",
        "h",
        "i",
        "j",
        "k",
        "l",
        "m",
        "o",
        "r",
        "t",
        "u",
        "v",
        "x",
        "y",
        "z",
        "/",
        "]"
    ],
    "editor.formatOnSaveMode": "modifications",
    "files.autoSave": "afterDelay",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js, ${capture}.typegen.ts",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts, ${capture}.typegen.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
        "*.mts": "${capture}.typegen.ts",
        "*.cts": "${capture}.typegen.ts"
    },
    "editor.inlineSuggest.edits.experimental.enabled": false,
    "oneDarkPro.vivid": true,
    "accessibility.dimUnfocused.enabled": true,
    "[typescriptreact]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },
    "explorer.confirmDelete": false,
    "git.openRepositoryInParentFolders": "never"
}
